{
    "manifest_version": 3,
    "name": "__MSG_appName__",
    "version": "1.6.0",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "contextMenus",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://grok.com/*",
        "https://x.com/*",
        "https://api.openai.com/*",
        "https://api.anthropic.com/*",
        "https://generativelanguage.googleapis.com/*",
        "https://api.x.ai/*",
        "http://localhost:11434/*",
        "http://127.0.0.1:11434/*",
        "http://localhost:1234/*",
        "http://127.0.0.1:1234/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_title": "Open Context-Carry",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://claude.ai/*",
                "https://gemini.google.com/*",
                "https://grok.com/*",
                "https://x.com/*"
            ],
            "js": [
                "assets_style.js",
                "assets_lang.js",
                "config.js",
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}